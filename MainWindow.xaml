<Window x:Class="Scada_TM221_WaterFllow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scada_TM221_WaterFllow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowState="Maximized">

    <Border BorderBrush="DarkGray" Margin="5" BorderThickness="1">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>
            
            <!--#########################################################################################################
                                                    title header project
            #########################################################################################################-->
            <Border BorderBrush="DarkGray" BorderThickness="1" Background="Orange" Grid.Row="0" Grid.ColumnSpan="3">
                <Grid >
                    <TextBlock>LEMANHTUAN</TextBlock>
                </Grid>
            </Border>

            <!--#########################################################################################################
                                                    dislay animation
            #########################################################################################################-->
            <Border Background="Azure" BorderBrush="DarkGray" BorderThickness="1" Grid.Row="1" Grid.Column="0">
                <Grid >
                    <ContentControl ContentTemplate="{StaticResource PushPumb}" Margin="10, 10"/>
                    <ContentControl ContentTemplate="{StaticResource PipeLine}" Margin="10, 20, -100, -50"/>
                    <ContentControl ContentTemplate="{StaticResource StirringPumb}" Margin="-50, 50, -50, 50"/>
                    <ContentControl ContentTemplate="{StaticResource TankInox}" Margin="-100, -100, 20, 20"/>
                    <ContentControl ContentTemplate="{StaticResource Cumlangloc}" Margin="-218,67,218,-67" />
                </Grid>
            </Border>
            
            <!--#########################################################################################################
                                                   footer project
            #########################################################################################################-->
            <Border Background="CornflowerBlue" BorderBrush="DarkGray" Grid.Row="3" Grid.ColumnSpan="3">
                
            </Border>
            
            <!--<GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>-->

            <!--#########################################################################################################
                                                   Control bar
            #########################################################################################################-->
            <Border BorderBrush="DarkGray" BorderThickness="1" Grid.Row="1" Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!--title | Row 0-->
                    <Border Background="DarkGreen">
                        <TextBlock Grid.Row="0" DockPanel.Dock="Top" FontSize="20"
                                Foreground="Black" HorizontalAlignment="Center" Margin="5"><Bold>Control Panel</Bold></TextBlock> 
                    </Border>
                    
                    <!--Control eventer1 and pumb 1 | Row 1-->
                    <Border Grid.Row="1" BorderBrush="DarkGray" BorderThickness="2" Background="Gray">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!--power supply eventer 1 before run push pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"><Bold>Eventer 1</Bold> </TextBlock>
                                <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Click="Button_Click_On_Eventer_1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Click="Button_Click_Off_Eventer_1" Width="50" Height="20">OFF</Button>
                                <!--run push pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"><Bold>Clean water Pumb 1</Bold> </TextBlock>
                                <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Click="Button_Click_ON_PUMB1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Click="Button_Click_OFF_PUMB1" Width="50" Height="20">OFF</Button>
                                <!--modify value frequency push pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"><Bold>Fresquency</Bold> </TextBlock>
                                <Slider Name="slValue" Grid.Column="1" Grid.Row="2"              
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Minimum="25" Maximum="50" 
                                    Width="50"
                                    TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" />
                                <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                                    TextAlignment="Left" HorizontalAlignment="Left" Width="20" />
                            </Grid>
                        </DockPanel>
                    </Border>
                    
                    <!--Control enventer 2 and pumb 2 | Row 2 -->
                    <Border Grid.Row="2" BorderBrush="DarkGray" BorderThickness="2" Background="Gray">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!--power supply eventer 1 before run push pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"><Bold>Eventer 2</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Click="Button_Click_On_Eventer_1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Click="Button_Click_Off_Eventer_1" Width="50" Height="20">OFF</Button>
                                <!--run push pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"><Bold>Clean water Pumb 2</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Click="Button_Click_ON_PUMB1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Click="Button_Click_OFF_PUMB1" Width="50" Height="20">OFF</Button>
                                <!--modify value frequency push pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"><Bold>Fresquency</Bold></TextBlock>
                                <Slider Name="slValue2" Grid.Column="1" Grid.Row="2"              
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Minimum="25" Maximum="50" 
                                    Width="50"
                                    TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" />
                                <TextBox Grid.Column="2" Grid.Row="2" Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" 
                                    TextAlignment="Left" HorizontalAlignment="Left" Width="20" />
                            </Grid>
                        </DockPanel>
                    </Border>

                    <!--Control javen 3&4 khuay 5&6 | Row 3-->
                    <Border Grid.Row="3" BorderBrush="DarkGray" BorderThickness="2" Background="Gray">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!--run pumb javen 3-->
                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"><Bold>Pumb javen 3</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Click="Button_Click_On_Eventer_1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Click="Button_Click_Off_Eventer_1" Width="50" Height="20">OFF</Button>
                                <!--run pumb javen 4-->
                                <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"><Bold>Pumb javen 4</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Click="Button_Click_ON_PUMB1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Click="Button_Click_OFF_PUMB1" Width="50" Height="20">OFF</Button>
                                <!--run pumb khuay 5-->
                                <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"><Bold>Stirring pumb 5</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" Click="Button_Click_On_Eventer_1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" Click="Button_Click_Off_Eventer_1" Width="50" Height="20">OFF</Button>
                                <!--run pumb khuay 5-->
                                <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"><Bold>Stirring pumb 6</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" Click="Button_Click_ON_PUMB1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="3" HorizontalAlignment="Left" Click="Button_Click_OFF_PUMB1" Width="50" Height="20">OFF</Button>
                            </Grid>
                        </DockPanel>
                    </Border>
                    
                    <!--Control pumb tram cap 1 | Row 4-->
                    <Border Grid.Row="4" BorderBrush="DarkGray" BorderThickness="2" Background="Gray">
                        <DockPanel Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="30" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!--Raw water pumb 1-->
                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"><Bold>Raw water pumb 1</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Click="Button_Click_On_Eventer_1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="0" HorizontalAlignment="Left" Click="Button_Click_Off_Eventer_1" Width="50" Height="20">OFF</Button>
                                <!--Raw water pumb 2-->
                                <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"><Bold>Raw water pumb 2</Bold></TextBlock>
                                <Button Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Click="Button_Click_ON_PUMB1" Width="50" Height="20">ON</Button>
                                <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" Click="Button_Click_OFF_PUMB1" Width="50" Height="20">OFF</Button>
                            </Grid>
                        </DockPanel>
                    </Border>
                    
                </Grid>
            </Border>
        </Grid>
            
    </Border>

</Window>
